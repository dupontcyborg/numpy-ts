{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist-ts",
    "rootDir": "."
  },
  "include": ["*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist", "rust", "zig"]
}
